# ========================================
# CONFIGURACIÓN DE AMBIENTE - MatchDeportivo
# ========================================
# Copia este archivo como .env y configura tus valores

# ========================================
# AMBIENTE
# ========================================
# Valores: development, production
ENVIRONMENT=development

# ========================================
# SEGURIDAD
# ========================================
# Genera una nueva SECRET_KEY con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=tu-secret-key-super-segura-aqui

# Debug mode (True solo en desarrollo)
DEBUG=True

